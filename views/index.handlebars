<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1><strong>Web Scraper</strong></h1>
                <h5>Currently scraping: New York Times</h5>
            </div>
        </div>
    </div>

</header>


    <!--  Articles get populated here  -->
    {{#if article}}
      {{#each article}}
      <div class="card">
        <div class="card-header bg-primary">
            <h4><a href="{{this.link}}" target="_blank">{{this.title}}</a></h4>
            <button class="btn btn-success save" data-id="{{this._id}}" data-state="{{this.saved}}">SAVE ARTICLE</button>
          </div>
          <div class="card-body bg-white">{{this.summary}}</div>
      </div>
      {{/each}}
    {{else}}
      <div class="card-heading" id="noArticles">No articles. Click the scrape button above to get started!</div>
    {{/if}}