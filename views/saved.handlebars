<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-10 mx-auto">
                <h1><strong>Saved Articles</strong></h1>
                <h5>Your Saved Articles</h5>
            </div>
        </div>
    </div>
</header>

<!--  Saved articles get populated here  -->
    {{#if article}}
      {{#each article}}
      <div class="card">
        <div class="card-header bg-primary">
            <h4><a href="{{this.link}}" target="_blank">{{this.title}}</a></h4>
            <div class="buttons">
              <button class="btn btn-warning note" data-id={{this._id}}>ARTICLE NOTES</button>
              <button class="btn btn-danger unsave" data-id="{{this._id}}" data-state="{{this.saved}}">DELETE FROM SAVED</button>
            </div>
          </div>
          <div class="card-body bg-white">{{this.summary}}</div>
      </div>
      {{/each}}
    {{else}}
      <div class="card-heading" id="noArticles">No articles. Click the scrape button above to get started!</div>
    {{/if}}

<!-- MODAL -->
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Your Note</h5>
        {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button> --}}
      </div>
      <div class="modal-body">
        <div class="savedNotes">
        <!-- Saved notes get populated here -->
        </div>
        <form>
            <div class="form-group">
                <input type="text" class="form-control" id="mynote" placeholder="Enter your note here">
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="submitNote">Submit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>